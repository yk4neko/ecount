
<%= turbo_frame_tag user do %>

  <div class="row py-2 border-top">
    <div class="col my-auto">
    <%= link_to user.name, user, data: { turbo: false } %>
    </div>
    <div class="col my-auto">
    <%= user.count %>
    </div>

    <div class="col my-auto">
      <div class="d-flex justify-content-end">
        <%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-outline-primary me-2" %>
        <%= button_to 'Delete', user, method: :delete, class: "btn btn-sm btn-outline-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </div>

  </div>

<% end %>

